<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <display-name>HelloMegha</display-name>
    <!-- first class which is responsible for user redirection and input verification-->
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>com.hellomegha.usermanagement.Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>com.hellomegha.usermanagement.DeleteUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlockUser</servlet-name>
        <servlet-class>com.hellomegha.usermanagement.BlockUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <!-- login -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.hellomegha.usermanagement.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/login/forgetpassword</url-pattern>
    </servlet-mapping>
    <!-- logout -->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.hellomegha.usermanagement.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!-- dashboard-->
    <servlet>
        <servlet-name>dashboard</servlet-name>
        <servlet-class>com.hellomegha.usermanagement.Dashboard</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/Dashboard</url-pattern>
    </servlet-mapping>
    <!--to update Account-->
    <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/updateAccount</url-pattern>
    </servlet-mapping>
    <!-- reset password-->
    <servlet>
        <servlet-name>ResetPassword</servlet-name>
        <servlet-class>com.hellomegha.databasequeries.ResetPassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetPassword</servlet-name>
        <url-pattern>/ResetPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/DeleteUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlockUser</servlet-name>
        <url-pattern>/BlockUser</url-pattern>
    </servlet-mapping>
    <!--jsp mapping-->
    <!-- usertable -->
    <servlet>
        <servlet-name>user-info-table</servlet-name>
        <jsp-file>/usertable.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>user-info-table</servlet-name>
        <url-pattern>/user-info</url-pattern>
    </servlet-mapping>
    <!-- usertable -->
    <servlet>
        <servlet-name>profile</servlet-name>
        <jsp-file>/profilechoicesecond.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <!--to update Account-->
    <welcome-file-list>
        <welcome-file>
            welcome.jsp
        </welcome-file>
    </welcome-file-list>
</web-app>
